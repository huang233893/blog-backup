// ===================
// 🌗 主题变量定义（仅使用项）
// ===================

:root {
  // ai_summary
  --liushen-title-font-color: #000000ff;
  --liushen-maskbg: rgba(255, 255, 255, 0.95);
  --liushen-ai-bg: conic-gradient(from 1.5708rad at 50% 50%, #d6b300 0%, #42A2FF 54%, #d6b300 100%);

  // card 背景
  --liushen-card-secondbg: #f1f3f8;

  // text
  --liushen-text: #3b3636ff;
  --liushen-secondtext: #3b3636ff;
  // 新增美化变量
  --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.05);
  --hover-light: rgba(0, 0, 0, 0.02);
}

[data-theme='dark'] {
  // ai_summary
  --liushen-title-font-color: #ffffffff;
  --liushen-maskbg: rgba(41, 37, 37, 0.95);
  --liushen-ai-bg: conic-gradient(from 1.5708rad at 50% 50%, rgba(214, 178, 0, 0.46) 0%, rgba(66, 161, 255, 0.53) 54%, rgba(214, 178, 0, 0.49) 100%);

  // card 背景
  --liushen-card-secondbg: #3e3f41;

  // text
  --liushen-text: #ffffffb3;
  --liushen-secondtext: #ffffffff;
  // 新增美化变量
  --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.2);
  --hover-light: rgba(255, 255, 255, 0.02);
}

// ===================
// 📘 AI 摘要模块样式
// ===================

if hexo-config('ai_summary.enable') {
  .ai-summary {
    background-color: var(--liushen-maskbg);
    background: var(--liushen-card-secondbg);
    border-radius: 16px;
    padding: 16px;
    line-height: 1.6;
    flex-direction: column;
    margin-bottom: 24px;
    display: flex;
    gap: 12px;
    position: relative;
    box-shadow: var(--shadow-light);
    transition: all 0.3s ease;

    // 移除模糊效果，修复样式错误
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      opacity: 0.15; /* 降低透明度避免突兀 */
      background-image: var(--liushen-ai-bg);
      border-radius: inherit;
      // 移除模糊和变形
    }

    &::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
      border-radius: 16px;
      background: var(--liushen-maskbg);
      border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .ai-explanation {
      z-index: 10;
      padding: 12px 16px;
      font-size: 15px;
      line-height: 1.7;
      color: var(--liushen-text);
      text-align: justify;
      background: rgba(255, 255, 255, 0.07);
      border-radius: 10px;
      transition: all 0.3s ease;

      // 打字机光标动画优化
      &::after {
        content: '';
        display: inline-block;
        width: 8px;
        height: 2px;
        margin-left: 3px;
        background: var(--liushen-text);
        vertical-align: bottom;
        animation: blink-underline 1s ease-in-out infinite;
        position: relative;
        bottom: 3px;
      }
    }

    .ai-title {
      z-index: 10;
      font-size: 16px;
      display: flex;
      border-radius: 10px;
      align-items: center;
      padding: 8px 16px;
      cursor: default;
      user-select: none;
      transition: all 0.2s ease;

      &:hover {
        background: var(--hover-light);
      }

      .ai-title-left {
        display: flex;
        align-items: center;
        color: var(--liushen-title-font-color);

        i {
          margin-right: 8px;
          display: flex;
          color: var(--liushen-title-font-color);
          width: 20px;
          height: 20px;
          border-radius: 50%;
          justify-content: center;
          align-items: center;
          background: rgba(255, 255, 255, 0.1);
        }

        .ai-title-text {
          font-weight: 600;
        }
      }

      .ai-tag {
        color: var(--liushen-secondtext);
        font-weight: 300;
        margin-left: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3px 10px;
        border-radius: 12px;
        font-size: 13px;
        background: rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;

        &:hover {
          transform: translateY(-1px);
          opacity: 0.9;
        }
      }
    }
  }

  // 打字机光标闪烁动画
  @keyframes blink-underline {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }
}