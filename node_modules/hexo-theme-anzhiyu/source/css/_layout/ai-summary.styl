// ===================
// 🌗 主题变量定义（增加命名空间避免冲突）
// ===================

:root
  // ai_summary 变量添加liushen-ai前缀
  --liushen-ai-title-font-color: #000000ff
  --liushen-ai-maskbg: rgba(255, 255, 255, 0.85)
  --liushen-ai-bg: conic-gradient(from 1.5708rad at 50% 50%, #d6b300 0%, #42A2FF 54%, #d6b300 100%)
  --liushen-ai-card-secondbg: #f1f3f8
  --liushen-ai-text: #3b3636ff
  --liushen-ai-secondtext: #3b3636ff

[data-theme='dark']
  --liushen-ai-title-font-color: #ffffffff
  --liushen-ai-maskbg: rgba(41, 37, 37, 0.85)
  --liushen-ai-bg: conic-gradient(from 1.5708rad at 50% 50%, rgba(214, 178, 0, 0.46) 0%, rgba(66, 161, 255, 0.53) 54%, rgba(214, 178, 0, 0.49) 100%)
  --liushen-ai-card-secondbg: #3e3f41
  --liushen-ai-text: #ffffffb3
  --liushen-ai-secondtext: #ffffffff

// ===================
// 📘 AI 摘要模块样式（强化CSS隔离）
// ===================

if hexo-config('ai_summary.enable')
  // 使用更具体的父容器隔离，避免全局污染
  .liushen-ai-container .ai-summary
    background-color: var(--liushen-ai-maskbg);  /* 补全语法 */
    background: var(--liushen-ai-card-secondbg);
    border-radius: 12px;
    padding: 8px 8px 12px 8px;
    line-height: 1.3;
    flex-direction: column;
    margin-bottom: 16px;
    display: flex;
    gap: 5px;
    position: relative;
    /* 增加隔离性：限制样式作用域 */
    box-sizing: border-box;

    &::before
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      filter: blur(8px);
      opacity: .4;
      background-image: var(--liushen-ai-bg);
      transform: scaleX(1) scaleY(.95) translateY(2px);
    
    &::after
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
      border-radius: 12px;
      background: var(--liushen-ai-maskbg);

    // 子元素添加模块前缀，增强隔离
    .liushen-ai-explanation
      z-index: 10;
      padding: 8px 12px;
      font-size: 15px;
      line-height: 1.4;
      color: var(--liushen-ai-text);
      text-align: justify;

      &::after
        content: '';
        display: inline-block;
        width: 8px;
        height: 2px;
        margin-left: 2px;
        background: var(--liushen-ai-text);
        vertical-align: bottom;
        animation: liushen-ai-blink-underline 1s ease-in-out infinite;
        transition: all .3s;
        position: relative;
        bottom: 3px;

    .liushen-ai-title
      z-index: 10;
      font-size: 15px;
      display: flex;
      border-radius: 8px;
      align-items: center;
      position: relative;
      padding: 0 12px;
      cursor: default;
      user-select: none;

      .liushen-ai-title-left
        display: flex;
        align-items: center;
        color: var(--liushen-ai-title-font-color);

        i
          margin-right: 3px;
          display: flex;
          color: var(--liushen-ai-title-font-color);
          border-radius: 20px;
          justify-content: center;
          align-items: center;

        .liushen-ai-title-text
          font-weight: 500;

      .liushen-ai-tag
        color: var(--liushen-ai-secondtext);
        font-weight: 300;
        margin-left: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: .3s;

  // 动画名称添加前缀，避免全局动画冲突
  @keyframes liushen-ai-blink-underline
    0%, 100%
      opacity: 1;
    50%
      opacity: 0;