// ===================
// 🌗 主题变量定义（默认黑色模式 + 标题栏优化）
// ===================

:root {
  // 基础深色模式变量
  --liushen-title-font-color: #ffffff; /* 标题文字用纯白增强对比 */
  --liushen-maskbg: rgba(30, 30, 30, 0.92); /* 标题栏背景加深，增强质感 */
  --liushen-ai-bg: conic-gradient(from 1.5708rad at 50% 50%, rgba(214, 178, 0, 0.46) 0%, rgba(66, 161, 255, 0.53) 54%, rgba(214, 178, 0, 0.49) 100%);
  --liushen-card-secondbg: #1e1e1e; /* 内容区背景与标题栏协调 */
  --liushen-text: #e0e0e0cc; /* 正文文字稍亮，提升可读性 */
  --liushen-secondtext: #f0f0f0;

  // MacOS标题栏专属变量
  --mac-titlebar-bg: linear-gradient(to right, rgba(35, 35, 35, 0.98), rgba(30, 30, 30, 0.98)); /* 标题栏细微渐变 */
  --mac-title-font: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI", Roboto, sans-serif; /* 仿Mac系统字体 */
  --mac-title-height: 34px; /* 标题栏高度微调，更舒展 */
  --mac-control-size: 14px; /* 红绿灯按钮大小 */
  --mac-tag-bg: #ffcc002a; /* 标签背景（浅黄透明，呼应Mac高亮） */
  --mac-tag-text: #ffd700; /* 标签文字（暖黄，提升辨识度） */
}

// ===================
// 📘 AI 摘要模块样式（标题栏美化重点）
// ===================

if hexo-config('ai_summary.enable') {
  .ai-summary {
    background: var(--liushen-card-secondbg);
    border-radius: 12px 12px 8px 8px; /* 保持Mac窗口圆角特征 */
    padding: 0;
    margin-bottom: 24px;
    display: flex;
    flex-direction: column;
    position: relative;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); /* 深色模式阴影加深，增强悬浮感 */
    overflow: hidden;

    // 背景渐变（弱化，不抢标题栏风头）
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      filter: blur(12px);
      opacity: 0.25;
      background-image: var(--liushen-ai-bg);
      transform: scaleY(0.9) translateY(4px);
    }

    &::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
      border-radius: 12px 12px 8px 8px;
      background: var(--liushen-maskbg);
    }

    // Mac标题栏核心美化
    .mac-titlebar {
      height: var(--mac-title-height);
      width: 100%;
      background: var(--mac-titlebar-bg); /* 应用渐变背景 */
      padding: 0 18px; /* 左右内边距增加，更宽松 */
      display: flex;
      align-items: center;
      gap: 14px; /* 元素间距放大 */
      cursor: default;
      z-index: 10;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05); /* 底部细边框，增强分隔 */
      backdrop-filter: blur(4px); /* 轻微毛玻璃效果，提升质感 */

      // 红绿灯按钮优化
      .window-controls {
        display: flex;
        gap: 8px;
        margin-right: 4px;

        .control-btn {
          width: var(--mac-control-size);
          height: var(--mac-control-size);
          border-radius: 50%;
          transition: all 0.15s ease;
          position: relative;

          // 按钮微妙高光，模拟Mac原生效果
          &::after {
            content: '';
            position: absolute;
            top: 1px;
            left: 1px;
            width: 4px;
            height: 4px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            opacity: 0.7;
          }

          &:hover {
            transform: scale(1.05);
            box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
          }

          &.close { background: #ff5f58; }
          &.minimize { background: #ffbd2e; }
          &.maximize { background: #14c143; }
        }
      }

      // 标题区域整合
      .ai-title {
        padding: 0;
        flex: 1;
        height: 100%;
        display: flex;
        align-items: center;
        font-family: var(--mac-title-font); /* 应用系统字体 */
      }

      // 标题文本美化
      .ai-title-left {
        display: flex;
        align-items: center;
        color: var(--liushen-title-font-color);

        i.fa-brands.fa-slack {
          margin-right: 8px; /* 图标与文字间距加大 */
          font-size: 16px; /* 图标稍大，更醒目 */
          color: #e0e0e0; /* 图标颜色稍浅，避免抢镜 */
          filter: drop-shadow(0 0 1px rgba(255,255,255,0.2));
        }

        .ai-title-text {
          font-size: 15px; /* 标题字体稍大 */
          font-weight: 500; /* 中等粗细，不生硬 */
          letter-spacing: 0.2px; /* 字间距微调，更舒展 */
          text-shadow: 0 1px 1px rgba(0,0,0,0.1); /* 轻微文字阴影，增强立体感 */
        }
      }

      // 标签样式优化（如Qwen3-8B）
      .ai-tag#ai-tag {
        color: var(--mac-tag-text);
        font-family: var(--mac-title-font);
        font-size: 12px;
        font-weight: 400;
        padding: 3px 10px;
        border-radius: 12px; /* 圆形标签，更精致 */
        background: var(--mac-tag-bg);
        margin-left: auto;
        transition: all 0.2s ease;

        &:hover {
          background: #ffcc0038;
          transform: translateY(-1px);
        }
      }
    }

    // 内容区保持协调
    .ai-explanation {
      z-index: 10;
      padding: 16px 18px;
      font-size: 15px;
      line-height: 1.6;
      color: var(--liushen-text);
      text-align: justify;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }
  }

  // 打字机光标动画保持
  @keyframes blink-underline {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
}